  pod 'Crashlytics', '~> 3.14.0'

  # Rx
  pod 'RxCocoa', '~> 4.5.0'
  pod 'Moya/RxSwift', '~> 13.0.1'
  pod 'RxDataSources', '~> 3.1.0'
  pod 'RxKeyboard', '~> 0.9.0'
  pod 'RxGesture', '~> 2.2.0'

  target 'KKdayPortalTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
